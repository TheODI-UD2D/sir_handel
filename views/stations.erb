<div class='col-md-6'>
  <h2>Northbound</h2>

  <ul id='northbound' class='victoria'>
    <% @stations.each do |s| %>
      <%= erb :"includes/station", locals: { station: s, direction: :northbound } %>
    <% end %>
  </ul>
</div>

<div class='col-md-6'>
  <h2>Southbound</h2>

  <ul id='southbound' class='victoria'>
    <% Hash[@stations.to_a.reverse].each do |s| %>
      <%= erb :"includes/station", locals: { station: s,  direction: :southbound } %>
    <% end %>
  </ul>
</div>
